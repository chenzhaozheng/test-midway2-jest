{
  "compileOnSave": true,
  "compilerOptions": {
    "types": ["jest"],
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "typeRoots": ["./typings", "./node_modules/@types"],
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/app/view/",
    "src/app/public/uploads/**/*",
    "dist",
    "node_modules",
    "test",
    "**/*.d.ts",
    "**/*.spec.ts"
  ]
}
